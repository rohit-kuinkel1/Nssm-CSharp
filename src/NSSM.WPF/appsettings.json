{
  "ServiceManager": {
    "DefaultTimeoutMs": 30000,
    "DefaultStartType": "Automatic",
    "DefaultServiceAccount": "LocalSystem"
  },
  "Logging": {
    "MinimumLevel": "Information",
    "EnableFileLogging": true,
    "LogFileDirectory": "%TEMP%",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "UI": {
    "ConfirmServiceDeletion": true,
    "ShowAdvancedOptionsByDefault": false,
    "StatusRefreshIntervalMs": 5000
  },
  "Application": {
    "Name": "NSSM Windows Service Manager",
    "Version": "1.0.0"
  },
  "AllowedHosts": "*"
}
